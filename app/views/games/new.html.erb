<div class="container">
  <h1>New Game</h1>
  <div class="d-flex">
    <% @letters.each do |letter| %>
      <div class="btn btn-primary btn-lg m-2"><%= letter %></div>
    <% end %>
  </div>

  <form action="score" method="post" data-turbo="false" class="h-100">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input name="letters" type="hidden" value="<%= @letters.join(",") %>" />
    <label for="input">What is the longest word you can find?</label><br>
    <input type="text" name="input">
    <button type="submit">Play</button>
  </form>
</div>
